<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
       >

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/frame_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax">

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/imgBanner"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />



                <ScrollView
                    android:id="@+id/scrlview"
                    android:layout_gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                   >

                <LinearLayout
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:id="@+id/images_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>
                </ScrollView>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/gradient_top_bottom"
                    android:orientation="vertical">

                    <LinearLayout
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_productName"
                            style="@style/text_shadow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:paddingLeft="5dp"
                            android:text="HELLO"
                            android:textSize="20sp"
                            android:textColor="@color/White" />

                        <TextView
                            android:id="@+id/txt_short_description"
                            style="@style/text_shadow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:textAllCaps="true"
                            android:textColor="@color/White"
                            android:textSize="16sp"
                            android:text="hie"
                            android:layout_marginBottom="5dp"
                           />


                    </LinearLayout>

                </LinearLayout>
            </FrameLayout>
            <RelativeLayout
                android:id="@+id/main_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frame_layout">

                <RelativeLayout
                    android:id="@+id/rl4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="5dp">

                    <TextView
                        android:id="@+id/rupee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="â‚¹"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:id="@+id/rupee_value"
                        android:layout_toRightOf="@id/rupee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="450"
                        />

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:paddingTop="3dp"
                        android:id="@+id/txt_default_qty"
                        android:layout_toRightOf="@id/rupee_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="(200gm)"
                        />


                    <TextView
                        android:id="@+id/item_increment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="+"
                        android:paddingTop="3dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"/>

                    <TextView
                        android:id="@+id/item_count"
                        android:layout_toLeftOf="@id/item_increment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:background="@drawable/qty"
                        android:gravity="center"
                        android:paddingTop="3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:paddingTop="3dp"
                        android:id="@+id/item_decrement"
                        android:layout_toLeftOf="@id/item_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="-"/>

                    <TextView
                        android:paddingTop="3dp"
                        android:layout_toLeftOf="@id/item_decrement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Qty"
                        android:layout_marginRight="5dp"
                       />






                </RelativeLayout>

                <HorizontalScrollView

                    android:id="@+id/horizontal_scroll_view"
                    android:layout_below="@+id/rl4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/qty_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                       />
                </HorizontalScrollView>


                <View
                    android:id="@+id/v1"
                    android:layout_below="@+id/horizontal_scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/explore_yellow"
                    android:paddingLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    />

                <RelativeLayout
                    android:id="@+id/rl5"
                    android:layout_below="@+id/v1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_product_overView"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="content"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/l1"
                   android:layout_below="@+id/rl5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <Button

                        android:id="@+id/btn_addtocart"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                       android:background="@drawable/btn_add"/>

                    <Button

                        android:id="@+id/btn_buy_now"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:background="@drawable/btn_buy"/>


                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>



    </FrameLayout>

</RelativeLayout>